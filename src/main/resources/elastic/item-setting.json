{
  "analysis": {
      "filter": {
      "nori_readingform": {
        "type": "nori_readingform"
      },
      "nori_part_of_speech": {
        "type": "nori_part_of_speech",
        "stoptags": ["E", "IC", "J", "SP", "SSC", "SSO", "SC"]
      },
      "word_delimiter": {
        "type": "word_delimiter",
        "split_on_case_change": true,
        "split_on_numerics": true,
        "generate_word_parts": true,
        "generate_number_parts": true,
        "catenate_all": false,
        "catenate_words": false,
        "preserve_original": false
      },
        "custom_snowball_filter": {
          "type": "snowball",
          "language": "English"
        }
    },
    "analyzer": {
      "korean": {
        "type": "custom",
        "tokenizer": "nori_tokenizer",
        "filter": ["nori_part_of_speech", "nori_readingform"]
      },
      "custom_snowball": {
        "type": "custom",
        "tokenizer": "standard",
        "filter": ["lowercase", "word_delimiter", "custom_snowball_filter"]
      },
     "mixed_analyzer" : {
       "type" : "custom",
       "tokenizer" : "nori_tokenizer",
       "filter" : ["nori_part_of_speech", "nori_readingform", "word_delimiter", "lowercase"]
     }
    },
    "normalizer": {
      "lowercase_normalizer": {
        "type": "custom",
        "filter": ["lowercase"]
      }
    }
  }
}